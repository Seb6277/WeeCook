{% extends 'base.html.twig' %}

{% block body %}
    <div class="container recipeShowContent">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ recipe_name }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <h3 class="col-md-4">Ingédients :</h3>
                </div>
                <div class="row person-select">
                    <button class="btn btn-primary col-md-2 offset-md-1">-</button>
                    <p class="col-md-4 col-sm-4">1 Personne(s)</p>
                    <button class="btn btn-primary col-md-2">+</button>
                </div>
                <div class="row ingredient">

                    {% for ingredient in ingredients %}
                        <div class="col-md-6">
                            <p>{{ ingredient }} : Quantité</p>
                        </div>
                    {% endfor %}

                </div>
                <div class="row">
                    <h3 class="col-md-4">Préparation :</h3>
                    <p class="col-md-12">
                        {{ preparation }}
                    </p>
                </div>
                {% block page %}{% endblock %}
            </div>
            <div class="col-md-6">
                <div id="carouselHomeControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block h-100" src="http://lorempixel.com/800/600/food" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block h-100" src="http://lorempixel.com/800/600/food" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block h-100" src="http://lorempixel.com/800/600/food" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselHomeControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselHomeControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}