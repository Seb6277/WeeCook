<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}WeeCook !{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light sticky-top">
    <a class="navbar-brand" href="{{ path('home') }}">WeeCook</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('search') }}">Trouver une recette<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('creation_page') }}">Partager une recette</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('moderation_page') }}">Modération</a>
            </li>
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('signup') }}">Inscription</a>
            </li>
            {% else %}
            <li class="nav-item">
                <a class="nav-link">Bonjour {{ app.user.username }} !</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('logout') }}">Déconnexion</a>
            </li>
            {% endif %}
        </ul>
    </div>
</nav>

{% block body %}{% endblock %}

<footer class="container-fluid">
    <div class="container">
        <div class="footer-row row">
            <div class="col-md-4 col-sm-12">
                <h3>WeeCook</h3>
            </div>
            <div class="col-md-4 col-sm-12">
                <p>© WeeCook 2019</p>
            </div>
            <div class="col-md-4 col-sm-12">
                <p>111 Main Street</br>+33 00 00 00 00</br>weecook@mail.com</p>
            </div>
        </div>
    </div>
</footer>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
